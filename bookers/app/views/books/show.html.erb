<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<%= render 'users/list', book: @book, user: @user %>
		</div>
		<div class="col-lg-7 padding-left">
			<h2>Book detail</h2>
			<table class="books-text">
				<td><%= attachment_image_tag @user, :image, :fill, 50, 50, class: "pull-left", format: 'jpeg', fallback: "no_image.jpg" %></td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>
				<td>
					<% if @book.user_id == current_user.id %>
						<%= link_to "Edit", edit_book_path, class: "btn btn-success white-text" %>
					<% end %>
				</td>
				<td>
					<% if @book.user_id == current_user.id %>
						<%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger white-text" %>
					<% end %>
				</td>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>
