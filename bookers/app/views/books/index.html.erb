<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<%= render 'users/list', book: @book, user: @user %>
		</div>
		<div class="col-lg-7 padding-left">
			<h2>Books</h2>
			<table class="books-text">
				<tr class="height100"><th></th><strong><th>Title</th><th>Opinion</th></strong></tr>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :image, :fill, 100, 100, class: "pull-left", format: 'jpeg', fallback: "no_image.jpg" %>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>
