<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<%= render 'list', book: @book, user: @user %>
		</div>
		<div class="col-lg-7 padding-left">
			<h2>Users</h2>
			<div class="row">
				<table class="books-text">
			 		<tr>
						<strong><th>Image</th><th>Name</th></strong><th></th>
					</tr>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :image, :fill, 100, 100, class: "pull-left", format: 'jpeg', fallback: "no_image.jpg" %></td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user) %></td>
						</tr>
					<% end %>
				</table>
			</div>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>
