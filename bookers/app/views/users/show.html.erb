<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-3">
			<%= render 'list', book: @book, user: @user %>
		</div>
		<div class="col-lg-7 padding-left">
			<h2>Books</h2>
			<div class="row">
				<table class="books-text">
					<tr>
						<th class="wide10"></th>
						<th class="wide20"><label>Title</label></th>
						<th class="wide70"><label>Opinion</label></th>
					</tr>
					<% @books.each do |book| %>
					<% if book.user_id == current_user.id %>
						<tr>
							<td><%= attachment_image_tag @user, :image, :fill, 100, 100, class: "pull-left", format: 'jpeg', fallback: "no_image.jpg" %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
					<% end %>
				</table>
			</div>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>
